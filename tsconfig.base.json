{
	"extends": "@tsconfig/node18/tsconfig.json",
	"include": ["src/**/*"],
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"importHelpers": true,
		"noEmitOnError": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	}
}
