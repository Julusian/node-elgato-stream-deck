{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"@elgato-stream-deck/core": ["./src/index.ts"]
		},
		"types": ["node"],
		"importHelpers": false,
		"noEmitOnError": false,
		"target": "es2022",
		"lib": ["es2023"]
	}
}
