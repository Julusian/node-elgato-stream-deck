{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*", "dist/**"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"@elgato-stream-deck/webhid": ["./src/index.ts"]
		},
		"lib": ["dom"],
		"types": ["w3c-web-hid"],
		"importHelpers": false
	}
}
